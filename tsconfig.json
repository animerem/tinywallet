{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "dist",
    "rootDir": ".",
    "lib": [
      "es7",
      "dom"
    ],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
